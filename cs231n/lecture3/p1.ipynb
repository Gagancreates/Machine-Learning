    "import numpy as np\n",
    "# now writing a multiclass svm loss function\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "id": "8a8631fa",
   "metadata": {},
   "outputs": [],
   "source": [
    "def svm_loss(x, y, W):\n",
    "    scores=np.dot(W, x)\n",
    "    loss=np.maximum(0, scores-scores[y]+1)\n",
    "    loss[y]=0\n",
    "    total_loss=np.sum(loss)\n",
    "    return total_loss"
   ]
